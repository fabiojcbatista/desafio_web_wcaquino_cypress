pipeline {
    agent any

    options {
        ansiColor('xterm') {
            echo '\033[31mERROR:\033[0m xxxx'
        }

        stages {
            stage('Build') {
                steps {
                    echo 'Building the application'
                }
            }

            stage('Testing') {
                steps {
                    bat 'npm i'
                    bat 'npx cypress run'
                }
            }

            stage('Deploy') {
                steps {
                    echo 'Deploying'
                }
            }
        }
    }
}
