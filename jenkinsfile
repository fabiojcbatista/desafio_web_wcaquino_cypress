pipeline {
    agent any

    environment {
        // Define a versão do Node.js a ser utilizada
        NODE_VERSION = '14.x'
    }
    
    options {
        ansiColor('xterm')
    }

    stages {
        stage('Clone Repository') {
            steps {
                // Clona o repositório a partir do GitHub usando credenciais
                git 'https://github.com/fabiojcbatista/desafio_web_wcaquino_cypress.git'
            }
        }

         stage('Install Dependencies') {
            steps {
                // Instala as dependências do Cypress
                bat 'npm install'
            }
        }

        stage('Run Cypress Tests') {
            steps {
                // Executa os testes Cypress na pasta e2e
                bat 'npx cypress run --spec "cypress/e2e/*.*"'
            }
        }
    }

    post {
        always {
            // Arquiva os resultados dos testes, se houver (ajuste o caminho conforme necessário)
            archiveArtifacts artifacts: 'cypress/videos/*.*, cypress/screenshots/*.*', allowEmptyArchive: true
        }
        failure {
            // Publica os logs de falha dos testes, se houver
            echo 'Build failed! Check the test results for more details.'
        }
    }
}
