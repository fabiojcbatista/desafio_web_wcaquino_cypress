pipeline {
    agent any

    environment {
        // Define a versão do Node.js a ser utilizada
        NODE_VERSION = '14.x'
    }

    stages {
        stage('Clone Repository') {
            steps {
                // Clona o repositório a partir do GitHub usando credenciais
                git 'https://github.com/fabiojcbatista/desafio_web_wcaquino_cypress.git'
            }
        }

        stage('Setup Node.js') {
            steps {
                // Instalar Node.js
                script {
                    def nodejsHome = tool name: 'NodeJS', type: 'jenkins.plugins.nodejs.tools.NodeJSInstallation'
                    env.PATH = "${nodejsHome}/bin:${env.PATH}"
                }
            }
        }

        stage('Install Dependencies2=') {
            steps {
                // Instalar dependências do projeto
                sh 'npm install'
            }
        }

        stage('Run Cypress Tests') {
            steps {
                // Executar os testes Cypress
                sh 'npx cypress run --spec "cypress/e2e/*.*"'
            }
        }
    }
    post {
        always {
            // Arquivar os resultados dos testes
            archiveArtifacts artifacts: 'cypress/videos/*.*', allowEmptyArchive: true
            archiveArtifacts artifacts: 'cypress/screenshots/*.*', allowEmptyArchive: true
            //junit 'cypress/results/*.xml'
           /* mail to: 'fabiojcbweb@gmail.com',
                 subject: "Cypress Tests Failed: ${currentBuild.fullDisplayName}",
                 body: "Check the Jenkins job for details: ${env.BUILD_URL}"*/
        }
        failure {
           /* mail to: 'fabiojcbweb@gmail.com',
                 subject: "Cypress Tests Failed: ${currentBuild.fullDisplayName}",
                 body: "Check the Jenkins job for details: ${env.BUILD_URL}"*/
                  // Publica os logs de falha dos testes, se houver
            echo 'Build failed! Check the test results for more details.'
        }
    }
}

